{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./app-js",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "es6", "scripthost", "es2016.array.include"],
    "jsx": "react"
  },
  "include": ["./webapp-js/**/*"]
}
